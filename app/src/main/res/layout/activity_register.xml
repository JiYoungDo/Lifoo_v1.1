<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.RegisterActivity.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_24px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="left"
            android:padding="20dp" />

        <TextView
            android:id="@+id/register_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_cjkkr"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/register_tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/register_tv_title"
            android:text="@string/social_login_welcome"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans_cjkkr"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/register_tv_welcome_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_cjkkr"
            android:textStyle="italic"
            android:text="@string/social_login_welcome_eng"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toBottomOf="@id/register_tv_welcome"
            android:textColor="@color/colorBlack"/>

        <EditText
            android:id="@+id/register_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/register_tv_welcome_eng"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="15sp"
            android:hint="아이디"
            android:paddingLeft="10dp"
            android:layout_marginTop="64dp"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_cjkkr"
            android:backgroundTint="@color/colorBlack"
            />

        <EditText
            android:id="@+id/register_et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/register_et_id"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold"
            android:hint="비밀번호"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/noto_sans_cjkkr"
            android:backgroundTint="@color/colorBlack"
            />

        <EditText
            android:id="@+id/register_et_pw_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/register_et_pw"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold"
            android:hint="비밀번호 확인"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/noto_sans_cjkkr"
            android:backgroundTint="@color/colorBlack"
            />

        <TextView
            android:id="@+id/register_tv_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/register_et_pw_confirm"
            android:text="회원가입"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_cjkkr"
            android:textColor="@color/colorBlack"
            android:gravity="center_horizontal"
            android:background="@drawable/roung_bg_all_white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="45dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/register_tv_register_btn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

