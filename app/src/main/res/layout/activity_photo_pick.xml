<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.PhotoPickActivity.PhotoPickActivity">

    <ImageView
        android:id="@+id/photo_pick_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

<!--    현재 상태에 따라 아이콘 모양이 바뀌고, 하는 일도 달라야함. -->
    <ImageView
        android:id="@+id/photo_pick_change_action_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_photo"
        app:tint="@color/colorBlack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/photo_pick_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_post_title"
        android:fontFamily="@font/noto_sans_cjkkr_medium"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/photo_pick_close_iv"
        app:layout_constraintBottom_toBottomOf="@id/photo_pick_close_iv"
        app:layout_constraintLeft_toRightOf="@id/photo_pick_close_iv"
        android:layout_marginLeft="36dp"/>
    
    <ImageView
        android:id="@+id/photo_pick_user_img"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:layout_constraintTop_toBottomOf="@id/photo_pick_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/food_image"
        android:layout_marginTop="20dp"/>

<!--
 앨범 뷰 세팅 할 수 있음 하기 (후순위)
 -->
<!--    항시 최상단 유지 할 수 있도록-->
    <TextView
        android:id="@+id/photo_pick_tv_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/next"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/noto_sans_cjkkr"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginBottom="25dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>